<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/other"
        android:maxWidth="240dp"
        android:padding="8dp"
        tools:text="hi man, how are you?"
        android:layout_alignStart="@+id/text_message_name"
        android:layout_below="@+id/text_message_name"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_message_body"
        android:layout_toEndOf="@+id/text_message_body"
        android:text="11:40"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="5dp"
        android:textSize="10sp" />

</RelativeLayout>