<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        tools:text="John Doe"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_message_name"
        android:layout_below="@+id/text_message_name"
        android:background="@drawable/my"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        tools:text="hi man, how are you?" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_message_body"
        android:layout_toStartOf="@+id/text_message_body"
        android:layout_marginEnd="5dp"
        tools:text="11:40"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp" />

</RelativeLayout>